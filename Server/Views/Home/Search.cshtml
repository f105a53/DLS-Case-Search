@model Common.Models.SearchResults

@{
    ViewData["Title"] = "Search Result";
}

<h1>Search (@Model.Results.Count results)</h1>

<table class="table table-striped table-bordered" id="searchResult">
    <thead>
        <tr>
            <th>
                Score
            </th>
            <th>
                From
            </th>
            <th>
                To
            </th>
            <th>
                Subject
            </th>
            <th>
                Path
            </th>
        </tr>
    </thead>
    <tbody>
    @foreach (var (score, email) in Model.Results)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => score)</td>
            <td>@Html.DisplayFor(modelItem => email.From)</td>
            <td>@Html.DisplayFor(modelItem => email.To)</td>
            <td>@Html.DisplayFor(modelItem => email.Subject)</td>
            <td>@Html.DisplayFor(modelItem => email.Path)</td>
        </tr>
    }
    </tbody>
</table>

<script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>

<script>
    $(document).ready(function() {
        $('#searchResult').DataTable();
    });
</script>