@using Humanizer
@model Search

@{
    ViewData["Title"] = "Search Result";
}

<h1>Search (@Model.Emails.Results.Count results)</h1>

<style>
    .result-container {
        background-color: rgba(0, 0, 0, 0.10);
        border-radius: 5px;
        box-shadow: 0px 2px 10px 0px rgba(0, 0, 0, 0.35);
        padding: 5px;
        transition: 0.3s;
    }

    .result-container:hover { box-shadow: 0px 2px 15px 0px rgba(0, 0, 0, 0.50); }
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            Did you mean:&nbsp;@foreach (var suggestion in Model.Suggestions)
            {<a asp-action="Search" asp-route-q="@suggestion" class="badge badge-secondary">@suggestion</a><text>&nbsp;</text>}
        </div>
    </div>
    <br />
    @foreach (var (score, email) in Model.Emails.Results)
    {
        <!-- Entire "card" -->
        <div class="row result-container">
            <div class="col-md-12">
                <!-- Subject/To/From row -->
                <div class="row">
                    <div class="col-md-8">
                        <h2 class="text-truncate" style="margin: 0px; padding: 0px;">
                            @email.Subject
                        </h2>
                    </div>
                    <div class="col-md-4">
                        <!-- to/from -->
                        <div class="row">
                            <div class="col-md-12" style="display: flex; margin: 0px; padding: 0px;">
                                <p style="margin: 0px; padding: 0px;">
                                    From: @email.From.Humanize()
                                </p>
                            </div>
                            <div class="col-md-12" style="display: flex; margin: 0px; padding: 0px;">
                                <p style="margin: 0px; padding: 0px;">
                                    To: @email.To.Humanize()
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Path/Date row -->
                <div class="row">
                    <!-- Path col -->
                    <div class="col-md-8" style="margin: 0px; padding-bottom: 0px; padding-top: 0px;">
                        <p style="font-style: italic; margin: 0px; padding-bottom: 0px; padding-top: 0px;">
                            @email.Path
                        </p>
                    </div>
                    <!-- Date col -->
                    <div class="col-md-4" style="margin: 0px; padding: 0px;">
                        <p style="margin: 0px; padding: 0px;">
                            Date: @email.Date.Humanize(null)
                        </p>
                    </div>
                </div>

                <hr/>
                <!-- Body preview row -->
                <div class="row">
                    <div class="col-md-12" style="display: block;">
                        <pre>
                            @email.Body
                        </pre>
                    </div>
                </div>
            </div>
        </div>
        <br/>
        <br/>
    }
</div>

<script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>

<script>
    $(document).ready(function() {
        $('#searchResult').DataTable();
    });
</script>