@model IEnumerable<Common.Models.SearchResults>

@{
    ViewData["Title"] = "Search Result";
}

<h1>Search</h1>

<table class="table table-striped table-bordered" id="searchResult">
    <thead>
        <tr>

            <th>
                Score
            </th>
            <th>
                Path
            </th>
            <th>
                Subject
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @foreach (var result in item.Results)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => result.Item1)</td>
                    <td>@Html.DisplayFor(modelItem => result.Item2.Path)</td>
                    <td>@Html.DisplayFor(modelItem => result.Item2.Subject)</td>
                </tr>
            }
        }
    </tbody>
</table>

<script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>

<script>
    $(document).ready(function () {
        $('#searchResult').DataTable();
    });
</script>